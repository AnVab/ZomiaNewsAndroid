<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="alertDialogTheme">@style/AppAlertDialog</item>

        <item name="android:textViewStyle">@style/customfontstyle</item>
        <item name="android:expandableListViewStyle">@style/customfontstyle</item>

    </style>

    <style name="AppAlertDialog"
        parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignInButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/login_button_color_normal</item>
        <item name="android:textColor">@color/login_button_text_normal</item>
    </style>

    <style name="customfontstyle">
        <item name="android:fontFamily">@font/firasans</item>
    </style>

    <style name="appBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/action_bar_text_color</item>
        <item name="android:colorControlNormal">@color/action_bar_text_color</item>
    </style>
</resources>
