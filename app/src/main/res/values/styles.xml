<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PrefsTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="alertDialogTheme">@style/AppAlertDialog</item>

        <item name="android:textViewStyle">@style/customfontstyle</item>
        <item name="android:expandableListViewStyle">@style/customfontstyle</item>

    </style>

    <style name="AppAlertDialog"
        parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/layout_preferences</item>
    </style>

    <style name="SignInButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/login_button_color_normal</item>
        <item name="android:textColor">@color/login_button_text_normal</item>
    </style>

    <style name="customfontstyle">
        <item name="android:fontFamily">@font/firasans</item>
    </style>

    <style name="appBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/action_bar_text_color</item>
        <item name="android:colorControlNormal">@color/action_bar_text_color</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="TextAppearance.Zomia.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.Zomia.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
